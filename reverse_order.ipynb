    "num=int(input(\"enter a number: \"))\n",
    "count=0\n",
    "if num==0:\n",
    "    count=1\n",
    "\n",
    "else:\n",
    "    if num<0:\n",
    "        num=-num\n",
    "    while num > 0:\n",
    "        count+=1\n",
    "        num = num //10\n",
    "\n",
    "print(\"total digits:\", count)"
